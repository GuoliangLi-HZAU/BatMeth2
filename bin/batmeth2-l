#!/bin/bash
CMDLINE=$@
FILECOUNT=`echo $CMDLINE|grep -E -o -- " -i| --inputfile"|wc -l`
HELP=`echo $CMDLINE|grep -E " -h| --help"|wc -l`
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
#echo
#echo "Batmeth2 v2.0"

if [ $HELP -gt 0 ] || [ $# -eq 0 ]
then
	$DIR/penguin-s -h
elif [ $FILECOUNT -eq 2 ]
then
	$DIR/penguin $CMDLINE
  ## $DIR/batmeth $CMDLINE
else
	while [[ $# > 1 ]]
	do
		Key="$1"
	shift

	if [ "$Key" == "-i" ]
	then
	    Filename="$1"
	fi
	done

	Sequence=`head $Filename -n2|tail -n1`
	Seq_Length=${#Sequence}
	if [ $Seq_Length -gt 149 ]
	then
		$DIR/penguin-l $CMDLINE
	else
		echo "Please use the short read align program: batmeth2-align"
	fi
fi

